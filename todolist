Add an item to cart
    </div>
    <!-- form -->
  

<form>
     <div class="input-group">
     <input type="text" class="form-control text-capitalize" id="itemInput" placeholder="Productname...">
      <div class="input-group-append">
     <input type="text" class="form-control text-capitalize" id="itemInput1" placeholder="Productname...">
      <div class="input-group-append">
      <input type="text" class="form-control text-capitalize" id="itemInput2" placeholder="Productname...">
      <div class="input-group-append">
       <button class="btn btn-green text-capitalize" type="submit">add item</button><br>
      </div>
     </div>
    </form>
    <div class="item-container">
     <!-- end of form  -->
     <div class="item-list my-5">
      <!-- single item -->
 <div class="item my-3">
      
  <!--    <div>
       <a href="#" class="complete-item">done</a>
       <a href="#" class="edit-item">edit</a>
       <a href="#" class="delete-item">delete</a>
      </div>-->
     </div>
      <!-- end of single item -->
     </div>
     <button type="button" class="btn btn-green my-3 text-capitalize" id="clear-list">clear items</button>
    </div>
   </div>
  </div>
